<form action="/quizes" method="get">
  <input type="text" name="search" required="true"
    placeholder="Pregunta a buscar" />
  <input type="submit" id="btnBuscar" value="Buscar" />
  <input type="button" value="Crear pregunta"
    onclick="window.location.href='/quizes/new'" />
</form>
<table align="center">
  <% for (var i=0;i<quizes.length;i++)  { %>
    <tr><td class="cssTema"><%= quizes[i].tema.toUpperCase() %></td>
        <td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
        <td><a href="quizes/<%= quizes[i].id %>/edit"><img src='/images/wUlkU.png'
          alt="Editar pregunta" /></a></td>
        <td>
          <form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
            <button type="submit" onclick="return confirm('Se va a eliminar la pregunta. Â¿Desea continuar?')">
                <img src='/images/eliminar.png' alt="Eliminar pregunta" />
            </button>
          </form>
        </td>
    </tr>
  <% } %>
<table>
<br /><br />
<input type="button" id="btnTodas" value="Todas" style="display:<%= visibilidad %>"
  onclick="window.location.href='/quizes'" />
