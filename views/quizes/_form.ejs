<p>
  <label form="preg" class="rem">Pregunta:</label>
  <% if (edicion){ %>
    <input type="text" value="<%=quiz.pregunta %>"
    name="quiz[pregunta]" required="true">
  <%}
  else
  { %>
    <input type="text" placeholder="<%=quiz.pregunta %>"
    name="quiz[pregunta]" required="true">
  <% } %>
</p>
<p>
  <label form="preg" class="rem">Respuesta:</label>
  <% if (edicion){ %>
    <input type="text" value="<%=quiz.respuesta %>"
    name="quiz[respuesta]" required="true">
  <%}
  else
  { %>
    <input type="text" placeholder="<%=quiz.respuesta %>"
    name="quiz[respuesta]" required="true">
  <% } %>
</p>
<p>
  <label form="preg" class="rem">Tema:</label>
  <select name="quiz[tema]">
  <% if (edicion){ %>
    <% if (quiz.tema=="otro"){ %>
      <option value="otro" selected>Otro</option>
    <%}
    else
    { %>
      <option value="otro">Otro</option>
    <% } %>
    <% if (quiz.tema=="humanidades"){ %>
      <option value="humanidades" selected>Humanidades</option>
    <%}
    else
    { %>
      <option value="humanidades">Humanidades</option>
    <% } %>
    <% if (quiz.tema=="ocio"){ %>
      <option value="ocio">Ocio</option>
    <%}
    else
    { %>
      <option value="ocio">Ocio</option>
    <% } %>
    <% if (quiz.tema=="ciencia"){ %>
      <option value="ciencia" selected>Ciencia</option>
    <%}
    else
    { %>
      <option value="ciencia">Ciencia</option>
    <% } %>
    <% if (quiz.tema=="tecnologia"){ %>
      <option value="tecnologia" selected>Tecnología</option>
    <%}
    else
    { %>
      <option value="tecnologia">Tecnología</option>
    <% } %>
    <% if (quiz.tema=="geografia"){ %>
      <option value="geografia" selected>Geografía</option>
    <%}
    else
    { %>
      <option value="geografia">Geografía</option>
    <% } %>

  <%}
  else
  { %>
    <option value="otro" selected>Otro</option>
    <option value="humanidades">Humanidades</option>
    <option value="ocio">Ocio</option>
    <option value="ciencia">Ciencia</option>
    <option value="tecnologia">Tecnología</option>
    <option value="geografia">Geografía</option>
  <% } %>
  </select>
</p>
<p>
  <a href="/quizes"><button type="button">Cancelar</button></a>
  <input type="submit" value="Guardar"></input>
</p>
